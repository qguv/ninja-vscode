{
    "name": "ninja",
    "displayName": "ninja-build",
    "description": "A syntax highlighter for Ninja build files",
    "version": "1.0.0",
    "publisher": "qguv",
    "repository": "https://github.com/qguv/ninja-vsx",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ninja",
            "aliases": ["Ninja", "ninja"],
            "extensions": [".ninja",".build"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ninja",
            "scopeName": "source.ninja",
            "path": "./syntaxes/ninja.tmLanguage.json"
        }]
    }
}
